<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    Cocktail: <strong><%= @cocktail.name %></strong>
    <br>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </h3>

  <p><strong>Add ingredient:</strong></p>

  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        (<%= link_to "Delete", dose_path(dose), method: :delete %>)
      </li>
    <% end %>
  </ul>

  <%= link_to "add dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>

  <hr>

  <%= link_to 'Back', cocktails_path, class: "btn btn-info" %>
</div>
